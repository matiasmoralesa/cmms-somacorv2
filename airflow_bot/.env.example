# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================
# Email Configuration (SendGrid)
# ============================================
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@somacor.com
EMAIL_TO_ADMIN=admin@somacor.com

# ============================================
# Machine Learning Configuration
# ============================================

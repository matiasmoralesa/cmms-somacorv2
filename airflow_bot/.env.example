ML_RETRAIN_INTERVAL_DAYS=30
ML_MIN_TRAINING_SAMPLES=100

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/home/ubuntu/cmms-somacorv2/airflow_bot/logs/bot_asistente.log

# ============================================
# Notification Configuration
# ============================================
ENABLE_TELEGRAM_NOTIFICATIONS=True
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_WEBHOOK_NOTIFICATIONS=False
WEBHOOK_URL=

# ============================================
# Scheduling Configuration
# ============================================
# Formato cron: minuto hora dia mes dia_semana
DAG_PREDICTIVO_SCHEDULE=0 2 * * *  # Diario a las 2 AM
DAG_PREVENTIVO_SCHEDULE=0 3 * * 1  # Lunes a las 3 AM
DAG_CHECKLISTS_SCHEDULE=0 1 * * *  # Diario a la 1 AM
DAG_REPORTES_SCHEDULE=0 4 * * 1    # Lunes a las 4 AM
DAG_OPTIMIZACION_SCHEDULE=0 0 * * * # Diario a medianoche

# ============================================
# Business Logic Configuration
# ============================================

# =============================================================================
# VARIABLES DE ENTORNO PARA PRODUCCIÓN - CMMS SOMACOR V2
# =============================================================================
# Copiar este archivo como .env y configurar los valores reales
# IMPORTANTE: Nunca subir el archivo .env al repositorio

# CONFIGURACIÓN DJANGO
# Generar con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-super-secret-key-here-generate-new-one
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-server-ip
ENVIRONMENT=production

# BASE DE DATOS POSTGRESQL (Recomendado para producción)
USE_MYSQL=False
DB_ENGINE=django.db.backends.postgresql
DB_NAME=cmms_somacor_prod
DB_USER=cmms_user
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# CONFIGURACIÓN CORS
CORS_ALLOW_ALL_ORIGINS=False
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOW_CREDENTIALS=True

# CSRF Configuration
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# CONFIGURACIÓN DE ARCHIVOS ESTÁTICOS
STATIC_URL=/static/
STATIC_ROOT=/var/www/cmms/static/
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/cmms/media/

# CONFIGURACIÓN DE EMAIL (Para notificaciones)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# CONFIGURACIÓN DE LOGGING
LOG_LEVEL=INFO
LOG_FILE=/var/log/cmms/django.log

# CONFIGURACIÓN DE CACHE (Redis recomendado)
CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
CACHE_LOCATION=redis://127.0.0.1:6379/1

# CONFIGURACIÓN DE CELERY (Para tareas asíncronas)
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# CONFIGURACIÓN DE SEGURIDAD HTTPS
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True

# CONFIGURACIÓN DE BOT (Opcional)
AIRFLOW_ENABLED=False
AIRFLOW_API_URL=http://localhost:8080/api/v1
DASK_SCHEDULER_URL=tcp://localhost:8786

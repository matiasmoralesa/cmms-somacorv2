# Configuración para desarrollo local

# CONFIGURACIÓN DJANGO
DJANGO_SECRET_KEY=django-insecure-development-key-do-not-use-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
ENVIRONMENT=development

# BASE DE DATOS (SQLite para desarrollo)
USE_MYSQL=False

# CONFIGURACIÓN CORS (Permisivo para desarrollo)
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOW_CREDENTIALS=True

# CONFIGURACIÓN DE SEGURIDAD (Deshabilitado para desarrollo)
SECURE_SSL_REDIRECT=False

# CONFIGURACIÓN DE BOT (Deshabilitado por defecto)
AIRFLOW_ENABLED=False
